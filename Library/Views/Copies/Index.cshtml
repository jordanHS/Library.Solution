@{
    Layout = "_Layout";
}

@using Library.Models;

<h1>List of book copies</h1>
<div class="info-container">
@if(Model.Count == 0)
{
    <h3>There are no copies.</h3>
}

@foreach (Copy copy in Model)
{
    <li>@Html.ActionLink($"{copy.CopyId}", "Details", new { id = copy.CopyId })</li>
    <hr />
}
</div>

<p>@Html.ActionLink("Add a new book copy", "Create")</p>
<p>@Html.ActionLink("Go Home", "Index", "Home")</p>