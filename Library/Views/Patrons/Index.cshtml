@{
    Layout = "_Layout";
}

@using Library.Models;

<h1>List of patrons</h1>
<div class="info-container">
@if(Model.Count == 0)
{
    <h5>There are no patrons added yet.</h5>
}

@foreach (Patron patron in Model)
{
    <li>@Html.ActionLink($"{patron.Name}", "Details", new { id = patron.PatronId })</li>
    <hr />
}
</div>


<p>@Html.ActionLink("Add New Patron", "Create")</p>
<p>@Html.ActionLink("Go Home", "Index", "Home")</p>