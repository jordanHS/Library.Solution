@{
    Layout = "_Layout";
}

@using Library.Models;

<h1>List of Books</h1>
@if(Model.Count == 0)
{
    <h3>There are no books in the list.</h3>
}

@foreach (Book book in Model)
{
    <li>@Html.ActionLink($"{book.Title}", "Details", new { id = book.BookId })</li>
}


<p>@Html.ActionLink("Add a new book", "Create")</p>
<p>@Html.ActionLink("Go Home", "Index", "Home")</p>