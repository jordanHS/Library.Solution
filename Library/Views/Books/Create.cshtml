@{
    Layout = "_Layout";
}

@model Library.Models.Book

<h1>Add a New Book</h1>

@using (Html.BeginForm())
{
    <span>Title:</span>
    @Html.TextBoxFor(model => model.Title)<br><br>

    @Html.Label("Select a Author: ")
    @Html.DropDownList("AuthorId")
    
    <input type="submit" value="Add a Book" class="btn btn-info">
}

<p>@Html.ActionLink("Back to the Book List", "Index", "Books")</p>
<p>@Html.ActionLink("Go Home", "Index", "Home")</p>